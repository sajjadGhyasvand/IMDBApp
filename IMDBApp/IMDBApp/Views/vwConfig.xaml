<Window x:Class="IMDBApp.Views.vwConfig"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMDBApp.Views"
      mc:Ignorable="d" FlowDirection="RightToLeft" WindowStartupLocation="CenterOwner"
      Height="550" Width="800" MinHeight="550" MinWidth="800"
      Title="vwConfig">
    <DockPanel >
        <StackPanel DockPanel.Dock="Left" Width="150" Margin="15" Background="LightGoldenrodYellow">
            <Button Name="BtnDirectors" Click="BtnDirectors_Click">کارگردان</Button>
            <Button Name="BtnGenres" Click="BtnGenres_Click">ژانر فیلم</Button>
            <Button>بازیگر</Button>
        </StackPanel>
        <Grid Name="MainGrid" Margin="15" Background="LightCyan">
            <TextBlock HorizontalAlignment="Center" FontSize="24" TextDecorations="{x:Null}" FontFamily="IRAN Sans" >یکی از گزینه های منوی سمت راست را انتخاب کنید.</TextBlock>
        </Grid>
    </DockPanel>
</Window>
